[ req ]
default_bits       = 2048
prompt             = no
default_md         = sha256
distinguished_name = dn
x509_extensions    = v3_ca  # Añadido para usar extensiones de CA

[ dn ]
C  = EC
O  = MiCA
CN = MiTestCA

[ v3_ca ]  # Nueva sección para extensiones de CA
basicConstraints = CA:true
subjectKeyIdentifier = hash
authorityKeyIdentifier = keyid:always,issuer
